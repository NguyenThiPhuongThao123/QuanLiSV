@model IEnumerable<QuanLiSV.Models.SINHVIEN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <p>Mã Sinh Viên</p>
        </th>
        <th>
            <p>Họ và tên</p>
        </th>
        <th>
            <p>Địa chỉ</p>
        </th>
        <th>
            <p>Mã lớp</p>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.Raw(item.Masv)
    </td>
    <td>
        @Html.Raw(item.Hoten)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Diachi)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Malop)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Masv }) |
        @Html.ActionLink("Details", "Details", new { id = item.Masv }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Masv })
    </td>
</tr>
}

</table>
